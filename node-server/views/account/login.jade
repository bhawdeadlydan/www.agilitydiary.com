extends ../layout

block content
  form(method='POST', parsley-validate)
    h1 Sign In
    .formField.formActions
      p Sign in with:
      a.action.social.btn-facebook(href='/auth/facebook')
        i.fa.fa-facebook.fa-fw
        | Facebook
      a.action.social.btn-twitter(href='/auth/twitter')
        i.fa.fa-twitter.fa-fw
        | Twitter
      a.action.social.btn-google-plus(href='/auth/google')
        i.fa.fa-google-plus.fa-fw
        | Google
    .formField.formContent
      p
        a(href='/signup') Sign up with email
    hr
    .formField.formEmail
      label.control-label(for='email') Email
      input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true, parsley-type='email')
    .formField.formPassword
      label.control-label(for='username') Password
      input.form-control(type='password', name='password', id='password', placeholder='Password')
    .formField.formActions
      button.action(type='submit')
        | Login

